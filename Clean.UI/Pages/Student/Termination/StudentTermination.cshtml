
@page "{handler?}"
@model Clean.UI.Pages.Student.Termination.StudentTerminationModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer
@{
    ViewData["Title"] = "Student Termination";
}

<div class="panel panel-flat">
    @Html.AntiForgeryToken()
    <div class="panel-heading">
        <h1 class="panel-title">@_localizer["شهرت شاگردان "]</h1>
    </div>
    <div class="panel-body" style="padding-bottom:5px;">
        <form id="dv_Student_Termination_StudentTermination" class="form main-form page-component" type="form" prefix="ux">
            <fieldset class="content-group">
                <legend class="text-bold">@_localizer["مشخصات شخص را وارد کنید"] </legend>
                <input type="hidden" id="uxbid" />
                <div class="row">
                    <div class="col-lg-10">
                        <div class="row">
                            <div class="col-md-4 col-sm-12 col-xs-12 ">
                                <div class="form-group has-feedback has-feedback-left">
                                    <label class="text-bold">
                                        @_localizer["کود"]
                                    </label>
                                    <input id="uxcode" name="uxCode" type="text" class="form-control search" />
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-12 col-xs-12" id="uxquranchapterdiv">
                                <div class="form-group">
                                    <label class="text-bold">
                                        @_localizer["سپاره های قرآن کریم"]
                                        <span class="text-danger">&nbsp;*</span>
                                    </label>
                                    <select id="uxquranchapter" name="uxQuranChapter" class="select">
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-12 col-xs-12 ">
                                <div class="form-group">
                                    <label class="text-bold">
                                        @_localizer["نوعیت سند ثبت شده"]
                                        <span class="text-danger">&nbsp;*</span>
                                    </label>
                                    <input id="uxnidtext" name="uxnidtext" type="text" class="form-control " disabled />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3 col-sm-12 col-xs-12 ">
                                <div class="form-group has-feedback has-feedback-left">
                                    <label class="text-bold">
                                        @_localizer["نام"]
                                        <span class="text-danger">&nbsp;*</span>
                                    </label>
                                    <input id="uxfirstname" name="uxFirstName" type="text" class="form-control search" lang="ps" required />
                                    <div class="form-control-feedback">
                                        <i class="icon-search4 text-size-base"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 col-sm-12 col-xs-12 ">
                                <div class="form-group has-feedback has-feedback-left">
                                    <label class="text-bold">
                                        @_localizer["تخلص"]
                                        <span class="text-danger">&nbsp;*</span>
                                    </label>
                                    <input id="uxlastname" name="uxlastname" type="text" class="form-control" lang="ps" required />
                                </div>
                            </div>
                            <div class="col-md-3 col-sm-12 col-xs-12 ">
                                <div class="form-group has-feedback has-feedback-left">
                                    <label class="text-bold">
                                        @_localizer["نام پدر"]
                                        <span class="text-danger">&nbsp;*</span>
                                    </label>
                                    <input id="uxfathername" name="uxFatherName" type="text" class="form-control search" lang="ps" required />
                                    <div class="form-control-feedback">
                                        <i class="icon-search4 text-size-base"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 col-sm-12 col-xs-12 ">
                                <div class="form-group">
                                    <label class="text-bold">
                                        @_localizer["نام پدرکلان"]
                                        <span class="text-danger">&nbsp;*</span>
                                    </label>
                                    <input id="uxgrandfathername" name="uxGrandFatherName" type="text" class="form-control " lang="ps" required />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 col-sm-12 col-xs-12 ">
                                <div class="form-group has-feedback has-feedback-left">
                                    <label class="text-bold">
                                        @_localizer["نام انگلیسی"]
                                        <span class="text-danger">&nbsp;*</span>
                                    </label>
                                    <input id="uxfirstnameeng" name="uxFirstNameEng" type="text" class="form-control search" lang="en" />
                                    <div class="form-control-feedback">
                                        <i class="icon-search4 text-size-base"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-12 col-xs-12 ">
                                <div class="form-group has-feedback has-feedback-left">
                                    <label class="text-bold">
                                        @_localizer["تخلص انگلیسی"]
                                        <span class="text-danger">&nbsp;*</span>
                                    </label>
                                    <input id="uxlastnameeng" name="uxLastNameEng" type="text" class="form-control" lang="en" />
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-12 col-xs-12 ">
                                <div class="form-group">
                                    <label class="text-bold">
                                        @_localizer["نام پدر انگلیسی"]
                                        <span class="text-danger">&nbsp;*</span>
                                    </label>
                                    <input id="uxfathernameeng" name="uxFatherNameEng" type="text" class="form-control " lang="en" />
                                </div>
                            </div>


                        </div>
                    </div>

                    <div class="col-lg-2 pull-right">
                        <div id="uxPhoto" class="img-uploader" data-type="photo" data-ref="uxphotopath">
                        </div>
                        <input type="hidden" class="output" id="uxphotopath" />
                    </div>

                </div>

            </fieldset>
            <hr />
            <div class="row div-form-control main-form-details">
                <div class="col-md-12">
                    <div class="form-group actions">
                        <button type="button" class="btn btn-primary" action="search"><i class="icon-search4 position-left"></i>@_localizer["جستجو"] </button>
                        <button type="button" class="btn btn-primary" action="new"><i class="icon-new-tab position-left"></i>@_localizer["صفحه جدید"]</button>
                    </div>
                </div>
            </div>
            <div class="form-grid main-form-details">
                <table bindonclick="true">
                    <thead>
                        <tr>
                            <th colname="code">@_localizer["کود"]</th>
                            <th colname="firstname">@_localizer["نام"]</th>
                            <th colname="lastname">@_localizer["تخلص"]</th>
                            <th colname="fathername">@_localizer["نام پدر"]</th>
                            <th colname="grandfathername">@_localizer["نام پدر کلان"]</th>
                            <th colname="MotherLanguageName">@_localizer["زبان مادری"]</th>
                            <th colname="gendertext">@_localizer["جنسیت"]</th>
                            <th colname="ClassName">@_localizer["صنف"]</th>
                            <th colname="DobShamsi">@_localizer["تاریخ تولد"]</th>
                            <th colname="Age">@_localizer["سن"]</th>
                            <th colname="provincetext">@_localizer["ولایت"]</th>
                            <th colname="districttext">@_localizer["ولسوالی"]</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>

        </form>
    </div>

    <div class="page-sidebar page-component" type="actionmenu">
        <ul class="navigation navigation-accordion">
            @Html.Raw(@Model.SubScreens)
        </ul>
    </div>
</div>