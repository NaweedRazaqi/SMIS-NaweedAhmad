
@page "{handler?}/{id?}"
@model Clean.UI.Pages.Student.Profile.StudentProfileAttachmentsModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer
@{
    Layout = null;
}

<div class="panel panel-flat">
    <div class="panel-heading">
        <h1 class="panel-title">@_localizer["اسناد و ضمایم"]</h1>
    </div>
    <div class="panel-body" style="padding-bottom:5px;">
        <form id="dv_Student_Profile_StudentProfileAttachments" class="form sub-form page-component" type="form" prefix="uxpd" parent="dv_Student_Profile_Profile" parentcol="ProfileID">
            <fieldset class="content-group">
                <legend class="text-bold">@_localizer["اسناد و ضمایم کارمند را ثبت، تغیر و حذف نمائید"]</legend>
                <div class="row">
                    <div class="col-md-4 col-sm-12 col-xs-12 ">
                        <label class="text-bold">
                          @_localizer["نوع سند/ضمیمه"]  
                            <span class="text-danger">&nbsp;*</span>
                        </label>
                        <div class="form-group">
                            <select id="uxpddocumenttypeid" name="uxpdDocumentTypeId" asp-items="@Model.ListOfDocumentTypes" class="select" required>
                                <option></option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-12 col-xs-12 ">
                        <label class="text-bold">@_localizer["منبع سند"]
                        </label>
                        <div class="form-group">
                            <input type="text" id="uxpddocumentsource" name="uxpdDocumentSource" class="form-control " />
                        </div>
                    </div>

                    <div class="col-md-4 col-sm-12 col-xs-12 ">
                        <label class="text-bold">
                           @_localizer["نمبر سند"]
                        </label>
                        <div class="form-group">
                            <input type="text" id="uxpddocumentnumber" name="uxpdDocumentNumber" class="form-control " />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 col-sm-12 col-xs-12 ">
                        <label class="text-bold">
                            @_localizer["تاریخ سند"]
                            <span class="text-danger">&nbsp;*</span>
                        </label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="icon-calendar3"></i></span>
                            <input type="text" id="uxpddocumentdateshamsi" sibling="uxpddocumentdate" name="uxpdDocumentDateShamsi" class="form-control Shamsi" />
                            <input type="hidden" id="uxpddocumentdate" sibling="uxpddocumentdateshamsi" name="uxpdDocumentDate" class="form-control Miladi" />
                        </div>
                    </div>
                    <div class="col-md-8 col-sm-12 col-xs-12 pull-left file-parent">
                        <label class="text-bold">
                            @_localizer["سند/ضمیمه را انتخاب نمائید"]
                            <span class="text-danger">&nbsp;*</span>
                        </label>
                        <div class="form-group">
                            <input type="file" id="uxpdattachement" name="attachement" class="file-attachment" data-show-upload="false" data-show-preview="false" required />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12 ">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">@_localizer["ملاحضات"] </label>
                            <textarea id="uxpddescription" name="uxpddescription" rows="2" cols="2" class="form-control remarks"></textarea>
                        </div>
                    </div>
                </div>
            </fieldset>
            <hr />
            <div class="row div-form-control">
                <div class="col-md-12">
                    <div class="form-group actions">
                        <button type="button" class="btn btn-primary" action="save"><i class="icon-floppy-disk position-left"></i>@_localizer["ثبت معلومات"]</button>
                        <button type="button" class="btn btn-primary" action="new"><i class="icon-new-tab position-left"></i>@_localizer["صفحه جدید"] </button>
                        <button type="button" class="btn btn-primary" action="search"><i class="icon-new-tab position-left"></i>@_localizer["جستجو"] </button>
                    </div>
                </div>
            </div>
            <div class="form-grid">
                <table bindonclick="true">
                    <thead>
                        <tr>
                            <th colname="DocumentTypeText">@_localizer["نوع سند"]</th>
                            <th colname="DocumentDateShamsi">@_localizer["تاریخ سند"]</th>
                            <th colname="DownloadDateText">@_localizer["آخرین تاریخ دانلود"]</th>
                            <th colname="path">@_localizer["فایل ثبت شده"]</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </form>
    </div>
</div>