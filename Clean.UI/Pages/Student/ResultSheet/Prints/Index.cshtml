<body style="direction:ltr;">
    <div id="form" class="div-mainform div-form" style="margin-right:auto; margin-left:auto;">


        <div class="row">

            <div class="row">

                <input type="hidden" value="@Model.Code" id="code_print" />
                <table>
                    <tr>
                        <th align="center" valign="middle" class="Middlelabel">
                            <br /><br />
                            <h3>
                                د پوهنی وزارت

                            </h3>
                            <h3> (&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;)  ریاست</h3>
                            <h3>اطلاعنامه</h3>
                            <br />
                        </th>
                        <th align="right" width="15%">
                            &nbsp;&nbsp;&nbsp;
                            <img src="~/assets/img/moe.png" style="width:90px; height:90px; position:relative;top:1rem" />
                            <br />
                        </th>


                        <th class="img-barcode" align="left">
                            <svg id="barcode1"></svg>
                        </th>
             


                </table>

            </div>

            <table width="100%" class="table-bordered" dir="rtl">
                </tr>
                <tbody style="border:1px solid; direction:rtl">

                    <tr>
                        <th> اسم  &nbsp;&nbsp;&nbsp;<span>(@Model.FirstName)</span></th>

                        <th>ولد<span>(@Model.FatherName)</span></th>

                        <th>صنف &nbsp;&nbsp;&nbsp;<span>(@Model.StudentClass)</span></th>

                        <th>مکتب<span>(@Model.StudentSchool)</span></th>

                    </tr>
            </table>
            <div class="row">
                <div class="col-md-3" id="marks">
                    <table width="100%" class="table-bordered" dir="rtl">

                        <thead>
                            <tr>
                                <th>مضامین</th>
                                <th>امنحان وسظ سال</th>
                                <th>امتحان سالانه</th>
                                <th>نتیجه نهایی</th>
                            </tr>
                        </thead>
                        <tbody>


                            @foreach (var subject in Model.SubjectResults)
                            {
                                <tr style="align-content:center;">
                                    <td>
                                        @subject.Subject
                                    </td>
                                    <td>@subject.MidMark</td>
                                    <td>@subject.FinalMark</td>
                                    <td>@(@subject.MidMark + @subject.FinalMark)</td>
                                </tr>
                            }



                            <tr style="align-content:center">
                                <td>
                                    مجموعه
                                </td>
                                <td>@Model.TotalMidTermMark</td>
                                <td>@Model.TotalFinalTermMark</td>
                                <td>@Model.TotalMark</td>
                            </tr>
                            <tr style="align-content:center">
                                <td>
                                    اوسط نمرات
                                </td>
                                <td>@Model.MidTermAverage</td>
                                <td>@Model.FinalTermAverage</td>
                                <td>@Model.Average</td>
                            </tr>
                            <tr style="align-content:center">
                                <td>
                                    نتیجه
                                </td>
                                <td>@Model.MidTermResult</td>
                                <td>@Model.FinalTermResult</td>
                                <td>@Model.FinalResult</td>
                            </tr>

                            </tr>
                        </tbody>
                    </table>
                </div>

                <div class="col-md-3" id="attendance">
                    <table width="100%" class="table-bordered" dir="rtl">
                        <thead>
                            <tr>
                                <th>ضوابط حاضری</th>
                                <th>امتحان وسط سال</th>
                                <th>امتحان سالانه</th>
                            </tr>


                        </thead>
                        <tbody>

                            <tr>
                                <td>
                                    حاضر
                                </td>
                                <td>45</td>
                                <td>45</td>
                            </tr>
                            <tr>
                                <td>
                                    غیر حاضر
                                </td>
                                <td>35</td>
                                <td>10</td>
                            </tr>
                            <tr>
                                <td>
                                    مریضی
                                </td>
                                <td>5</td>
                                <td>10</td>
                            </tr>
                            <tr>
                                <td>
                                    رخصتی
                                </td>
                                <td>5</td>
                                <td>10</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="col-md-3" id="Asasnumber">
                    <table width="100%" class="table-bordered" dir="rtl">
                        <thead>
                            <tr>
                                <td style="width:38%">نمبر اساس</td>
                                <td colspan="3">@Model.StudentAssassNumber</td>
                            </tr>
                        </thead>
                    </table>
                </div>
                <div class="col-md-3" id="Signaute">
                    <table width="100%" class="table-bordered" dir="rtl">
                        <thead>
                            <tr>
                                <th>محل امضا</th>
                                <th>امتحان وسط سال</th>
                                <th>امتحان سالانه</th>
                            </tr>
                            <tr>
                                <td>امضا نگران صنف</td>
                                <td></td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>امضا سرمعلم</td>
                                <td></td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>امضا آمر مکتب</td>
                                <td></td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>امضا ولی شاگرد</td>
                                <td></td>
                                <td></td>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
            <div class="row">

            </div>
            <div class="row">

            </div>
        </div>





    </div>

    <script>

        $(document).ready(function () {
            var Code = $('#code_print').val();
            var MOE = "MOE-SMIS";
            JsBarcode("#barcode1", `${MOE}${Code}`);
        });


    </script>
</body>
</html>