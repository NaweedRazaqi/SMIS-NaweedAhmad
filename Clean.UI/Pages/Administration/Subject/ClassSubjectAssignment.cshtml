
@page "{handler?}"

@model Clean.UI.Pages.Administration.Subject.ClassSubjectAssignmentModel

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer
@{
    ViewData["Title"] = "StudentClass";
   
}
    <div class="panel panel-flat">
        @Html.AntiForgeryToken()
        <div class="panel-heading">
            <h1 class="panel-title">صنف شاگرد</h1>
        </div>
        <div class="panel-body" style="padding-bottom:5px;">

            <form id="dv_Administration_Subject_ClassSubjectAssignment" class="form main-form page-component" type="form" prefix="uxs">
                <fieldset class="content-group">
                    <legend class="text-bold">لطفاً معلومات مضامین را وارد کنید</legend>

                    <div class="row">

                        <div class="col-md-4 col-sm-12 col-xs-12 ">
                            <div class="form-group">
                                <label class="text-bold">
                                    @_localizer["نوی تعلیمات"]
                                    <span class="text-danger">&nbsp;*</span>
                                </label>
                                <select id="uxsschooltypeid" name="uxsSchoolTypeId" class="select search" asp-items="@Model.ListOfSchoolTypes" required child="uxssubjectid">
                                    <option></option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-12 col-xs-12 ">
                            <div class="form-group">
                                <label class="text-bold">
                                    @_localizer["مضمون"]
                                    <span class="text-danger">&nbsp;*</span>
                                </label>
                                <select id="uxssubjectid" name="uxsSubjectId" class="select search" data-type="SubjectType" required>
                                    <option></option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-12 col-xs-12 ">
                            <div class="form-group">
                                <label class="text-bold">
                                    @_localizer["صنف"]
                                    <span class="text-danger">&nbsp;*</span>
                                </label>
                                <select id="uxsclasstypeid" name="uxsClassTypeId" class="select search" asp-items="@Model.ListOfClassTypes" required>
                                    <option></option>
                                </select>
                            </div>
                        </div>
                    </div>
                </fieldset>
                <hr />
                <div class="row div-form-control main-form-details">
                    <div class="col-md-12">
                        <div class="form-group actions">
                            <button type="button" class="btn btn-primary" action="save"><i class="icon-floppy-disk position-left"></i>@_localizer["ثبت معلومات"]</button>
                            <button type="button" class="btn btn-primary" action="search"><i class="icon-search4 position-left"></i>@_localizer["جستجو"] </button>
                            <button type="button" class="btn btn-primary" action="new"><i class="icon-new-tab position-left"></i>@_localizer["صفحه جدید"]</button>
                        </div>
                    </div>
                </div>
                <div class="form-grid">
                    <table style="direction: rtl;" bindonclick="true">
                        <thead>
                            <tr>
                                <th colname="SchoolTypeName">نوع تعلیمات</th>
                                <th colname="SubjectText">نام مضمون</th>
                                <th colname="ClasstypeIdText">صنف</th>
                                @*<th colname="ClassmanagementText">گتکوری</th>*@
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </form>

        </div>
    </div>
