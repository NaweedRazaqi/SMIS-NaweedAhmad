

@page "{handler?}"
@model Clean.UI.Pages.Security.Owner.RegisterOwnerModel
@{
    Layout = "~/Pages/Shared/_MasterLayout.cshtml";
}
@Html.AntiForgeryToken()

<div class="panel panel-flat">
    <div class="panel-heading">
        <h1 class="panel-title">تنظیمات کاربری</h1>
    </div>
    <div class="panel-body">

        <form id="dv_Security_Owner_RegisterOwner" class="form main-form page-component" type="form" prefix="ux">
            <fieldset class="content-group">

                <legend>برای اضافه نمودن موقف از این صفحه استفاده نمایید.</legend>
                <div class="row">
                    <div class="col-md-4 col-sm-12 col-xs-12 ">
                        <div class="form-group">
                            <label class="text-bold">
                                نام موقف
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <input type="text" id="uxname" name="uxName" class="form-control" required>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-12 col-xs-12 ">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                ولایت
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <select id="uxprovinceid" name="uxProvinceId" class="select" asp-items="@Model.ListOfProvinces" required>
                                <option></option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-12 col-xs-12 ">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                راپورده به
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <select id="uxparentid" name="uxParentId" class="select" asp-items="@Model.ListOfOwnersParent">
                                <option></option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">

                    <div class="col-md-6 col-sm-12 col-xs-12 ">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">فعال | ‌غیر فعال</label>
                            <input type="checkbox" class="checkbox" id="uxisactive" name="uxIsActive" />
                        </div>
                    </div>
                </div>
            </fieldset>
            <hr />
            <div class="row div-form-control">
                <div class="col-md-12">
                    <div class="form-group actions">

                        <button type="button" action="save" class="btn btn-primary"><i class="icon-floppy-disk position-left"></i>ثبت </button>
                        <button type="button" action="new" class="btn btn-primary"><i class="icon-new-tab position-left"></i>جدید</button>
                        <button type="button" action="search" class="btn btn-primary"><i class="icon-search4 position-left"></i>جستجو </button>
                      
                    </div>
                </div>
            </div>

            <div class="form-grid main-form-details">
                <table bindonclick="true">
                    <thead>
                        <tr>
                            <th colname="Name">نام موقف</th>
                            <th colname="ParentName">راپورده به</th>
                            <th colname="ProvinceText">ولایت</th>
                            <th colname="IsActiveText">حالت</th>
                        </tr>
                    </thead>
                </table>
            </div>

        </form>
    </div>

    <div class="page-sidebar page-component" type="actionmenu">
        <ul class="navigation navigation-alt navigation-accordion">

            @Html.Raw(@Model.SubScreens)
        </ul>
    </div>
</div>
